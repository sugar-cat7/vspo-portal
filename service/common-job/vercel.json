{
    "build": {
        "env": {
            "GO_BUILD_FLAGS": "-ldflags '-s -w'"
        }
    },
    "crons": [
        {
            "path": "/api/ping",
            "schedule": "*/10 * * * *"
        },
        {
            "path": "/api/cron/videos?platform_type=twitcasting,twitch,youtube&period=week&video_type=vspo_stream",
            "schedule": "*/5 * * * *"
        },
        {
            "path": "/api/cron/channels?platform_type=youtube",
            "schedule": "0 */12 * * *"
        }
    ],
    "functions": {
        "api/**/*.go": {
            "maxDuration": 60
        }
    }
}
