{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["**/*.json", "**/*.config.js", "node_modules", ".next"]
  }
}
