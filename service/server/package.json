{
  "name": "vspo-portal-server",
  "version": "1.0.0",
  "main": "cmd/server/index.ts",
  "type": "module",
  "scripts": {
    "dev:gateway": "wrangler dev --config config/wrangler/vspo-portal-gateway/wrangler.toml --script cmd/server/gateway.ts",
    "dev:internal": "wrangler dev --config config/wrangler/vspo-portal-app/wrangler.toml --script cmd/server/internal/application/index.ts",
    "dev:cron": "wrangler dev --test-scheduled --config config/wrangler/vspo-portal-cron/wrangler.toml --script cmd/cron/index.ts",
    "deploy:all": "nx run vspo-portal-server:deploy-all",
    "deploy": "wrangler deploy",
    "build:dryrun": "nx run vspo-portal-server:build-dryrun",
    "db:up": "docker compose -f docker/compose.yaml up",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio --port=3004",
    "db:seed": "npx tsx cmd/local/database/seed.ts",
    "biome:check": "pnpm biome check ./**/**",
    "biome:check:write": "pnpm biome check --write ./**/**",
    "tsc": "tsc --noEmit",
    "ci": "nx run vspo-portal-server:ci",
    "test": "nx test vspo-portal-server"
  },
  "dependencies": {
    "@ai-sdk/openai": "^0.0.58",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.16.4",
    "@langchain/cloudflare": "^0.0.7",
    "@microlabs/otel-cf-workers": "1.0.0-rc.45",
    "@neondatabase/serverless": "^0.10.4",
    "@opentelemetry/api": "1.9.0",
    "@tsndr/cloudflare-worker-jwt": "2.5.3",
    "@twurple/api": "^7.2.1",
    "@twurple/auth": "^7.2.1",
    "ai": "^3.4.33",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "googleapis": "^144.0.0",
    "hono": "^4.6.19",
    "openai": "^4.80.1",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "tslog": "^4.9.3",
    "uuid": "^10.0.0",
    "valibot": "^0.41.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250124.3",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.27.2",
    "drizzle-seed": "^0.3.0",
    "miniflare": "3.20240821.1",
    "nx": "20.3.2",
    "typescript": "^5.7.3",
    "wrangler": "^3.106.0"
  },
  "nx": {}
}